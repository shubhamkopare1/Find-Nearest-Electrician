
<style>
    .collapse{
        background-color: purple !important;
    color: white !important;
    padding: .6rem !important;
    }
    .navbar-light .navbar-nav .nav-link {
    color: white !important;
}
.navbar-light .navbar-nav .nav-link.active, .navbar-light .navbar-nav .show>.nav-link {
    color: white !important;
}
.navbar-light .navbar-brand {
    color: white !important;
}
.container-fluid{
    background-color: purple;
}
.navbar{
    padding: 0 !important;
}
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light custom-navbar">
  <div class="container-fluid">
    <div>
        <a class="navbar-brand" href="/home">Electrician</a>
    </div>
      
      <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>   
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                  <a class="nav-link active custom-nav-link" aria-current="page" href="/userHome">Home</a>
              </li>
             
              <!-- Conditional rendering for Login/Register or Profile/Logout -->
              <% if (!currUser) { %>
                  <li class="nav-item">
                      <a class="nav-link custom-nav-link" href="/userLogin">Login</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link custom-nav-link" href="/userRegister">Register</a>
                  </li>
                 
              <% } else { %>
                  <!-- Profile link for logged-in users -->
                  <li class="nav-item">
                      <a class="nav-link custom-nav-link" href="/userProfile"><%= currUser.username %>'s Profile</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link custom-nav-link" href="/userLogout">Logout</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link custom-nav-link" href="/order/<%= currUser.id %>">Order</a>
    
                </li>
              <% } %>
          </ul>
      </div>
  </div>
