<% layout("/layouts/boilerplates") -%>
<style>
    .footer{
        position: absolute;
    }
</style>
<div class="row mt-3">
<h1 class="col-6 offset-3">SignUp</h1>
<div class="col-6 offset-3">
<form action="/userRegisters" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <lable for="username" class="form-label">Username</lable>
        <input
        name="username",
        id="username"
        class="form-control"
        type="text"
        required
        />
        <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="mb-3">
        <lable for="email" class="form-label">Email</lable>
        <input
        name="email",
        id="email"
        class="form-control"
        type="email"
        required
        />
        <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="mb-3">
        <lable for="password" class="form-label">Password</lable>
        <input
        name="password",
        id="password"
        class="form-control"
        type="password"
        required
        />
        <div class="valid-feedback">Looks good!</div>
    </div>
<button type="submit" class="btn btn" style="background-color: purple; color: white;">SignUp</button>
</form>
</div>
</div>